.ad-swiper,.slide-image{height: 240rpx;width: 100%}

.page-foot{position:absolute;bottom: 0;left: 0;height: 40px;width:100%;background-color: #fff;display: flex;align-items: center;justify-content: center;flex-direction:column;padding: 10px 0;}
.page-foot-phone,.page-foot-copyright{flex: 1;display: flex;align-items: center;}
.page-foot-phone1 {margin-right: 10rpx;}
.page-foot-phone2 {display: flex;align-items: center;}
.page-foot-copyright{font-family: "arial"}
.page-foot-phone-img{width: 20px; height: 20px;margin-left: 5px;}

.pageContent{position:absolute;left: 0;width: 100%;bottom: 60px;top:0;background-color: rgb(240, 239, 245);}

.Toast{width: 240rpx;height: 240rpx;background-color: rgba(0, 0, 0, 0.7);border-radius: 10rpx;display: flex;align-items: center;justify-content: center;flex-direction:column; position: fixed;left: 50%;top: 50%;z-index: 9999999;transform:translate(-50%,-50%); }
.Toast_img{width: 100rpx;height: 100rpx; margin-bottom: 30rpx;}
.ToastMsg{background-color: rgba(0, 0, 0, 0.7);border-radius: 10rpx;height: 60rpx;line-height: 60rpx;position: fixed;left: 50%;bottom: 50%;z-index: 9999999;transform:translate(-50%,0);padding: 0 30rpx;white-space:nowrap;}

/*确认框*/
.confirm{position: absolute;top: 0;left: 0;width: 100%;height: 100%;z-index: 99999;background-color: rgba(0, 0, 0, .3)}
.confirm_content{position: absolute;bottom: 0;left: 0;width: 100%;display: flex;justify-content: flex-end;flex-direction:column;background-color: #fff;padding: 30rpx 0; }
button[type="primary"].confirm_bt1 {width: 90%; margin-bottom: 20rpx;background-color: #e64340;}
button[type="default"].confirm_bt2 {width: 90%; border: 1px solid #cccccc;}
